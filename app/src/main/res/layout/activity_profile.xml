<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/profilebackground"
    tools:context="com.teachingchild.teachingautisticchild.view.Courses_Courses"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="6"
        android:orientation="vertical">

        //0.8
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="0.6"
            android:layout_height="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/back_btn"
                    android:layout_width="35dp"
                    android:background="@drawable/back_btn"
                    android:layout_centerInParent="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="18dip"
                    android:layout_height="35dp"/>

                <com.teachingchild.teachingautisticchild.customfont.MyTextView_HK_Grotesk_Display_Regular
                    android:id="@+id/saveTxt"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:textColor="@color/textcolor"
                    android:layout_centerInParent="true"
                    android:text="Edit"/>

                <ImageView
                    android:layout_width="30dp"
                    android:background="@drawable/settings"
                    android:layout_centerInParent="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="18dip"
                    android:layout_height="30dp"/>
            </RelativeLayout>

        </LinearLayout>

        //1.1
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="0dp"
            >

            <RelativeLayout
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/profileoval">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.teachingchild.teachingautisticchild.Utils.CircleImageView
                        android:id="@+id/imageview_account_profiless"
                        android:layout_width="90dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginBottom="8dp"
                        android:layout_height="90dp"
                      />

                    <com.teachingchild.teachingautisticchild.Utils.CircleImageView
                        android:id="@+id/pickImg"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="top|right"
                        android:adjustViewBounds="true"
                        android:paddingLeft="10dp"
                        android:src="@android:drawable/ic_menu_edit"
                        app:strokeColor="@color/stroke_color"
                        app:strokeWidth="5px" />

                </FrameLayout>


            </RelativeLayout>

        </LinearLayout>

        //0.3
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="0.3"
            android:layout_gravity="center"
            android:layout_height="0dp">

            <ViewSwitcher
                android:id="@+id/viewSwitcher1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="0.786">

                <com.teachingchild.teachingautisticchild.customfont.MyTextView_HK_Grotesk_Display_Regular
                    android:id="@+id/nameTxt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textSize="26sp"
                    android:textColor="@color/textcolor"
                    android:text=""/>


                <EditText
                    android:id="@+id/switchname"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textSize="18sp"
                    android:textColor="@color/textcolor"/>
            </ViewSwitcher>


        </LinearLayout>

        //0.3
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="0.3"
            android:layout_gravity="center"
            android:layout_height="0dp">

            <ViewSwitcher
                android:id="@+id/viewSwitcher2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="0.786">

                <com.teachingchild.teachingautisticchild.customfont.MyTextView_HK_Grotesk_Display_Regular
                    android:id="@+id/emailTxt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textSize="18sp"
                    android:textColor="@color/subtextcolor"
                    android:layout_weight="0.786"
                    android:text=""/>

                <EditText
                    android:id="@+id/switchemail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textSize="15sp"
                    android:textColor="@color/textcolor"/>

            </ViewSwitcher>


        </LinearLayout>

        //0.3
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="0.3"
            android:layout_gravity="center"
            android:layout_height="0dp">

            <ViewSwitcher
                android:id="@+id/viewSwitcher3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="0.786">

                <com.teachingchild.teachingautisticchild.customfont.MyTextView_HK_Grotesk_Display_Regular
                    android:id="@+id/phoneTxt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textSize="18sp"
                    android:textColor="@color/subtextcolor"
                    android:layout_weight="0.786"
                    android:text=""/>

                <EditText
                    android:id="@+id/switchphone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textSize="15sp"
                    android:textColor="@color/textcolor"/>

            </ViewSwitcher>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="0.3"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_height="0dp">

            <ViewSwitcher
                android:id="@+id/viewSwitcher44"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="0.9985"
                android:textAlignment="viewEnd"
                android:layout_marginRight="15dp"
                tools:ignore="RtlCompat" >

                <com.teachingchild.teachingautisticchild.customfont.MyTextView_HK_Grotesk_Display_Regular
                    android:id="@+id/ageTxt4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:textColor="@color/subtextcolor"
                    android:layout_weight="0.9985"
                    android:textAlignment="viewEnd"
                    android:text="Age"
                    tools:ignore="RtlCompat" />

                <EditText
                    android:id="@+id/switchage5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textSize="15sp"
                    android:textColor="@color/textcolor"/>

            </ViewSwitcher>


            <ViewSwitcher
                android:id="@+id/viewSwitcher55"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="0.9985"
                android:textAlignment="viewStart"
                android:layout_marginLeft="15dp"
                tools:ignore="RtlCompat" >

                <com.teachingchild.teachingautisticchild.customfont.MyTextView_HK_Grotesk_Display_Regular
                    android:id="@+id/weightTxt5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:textColor="@color/subtextcolor"
                    android:layout_weight="0.9985"
                    android:textAlignment="viewStart"
                    android:text="Weight"
                    tools:ignore="RtlCompat" />

                <EditText
                    android:id="@+id/switchweight5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textSize="15sp"
                    android:textColor="@color/textcolor"/>

            </ViewSwitcher>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="0.3"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_height="0dp">

            <ViewSwitcher
                android:id="@+id/viewSwitcher4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="0.9985"
                android:textAlignment="viewEnd"
                android:layout_marginRight="15dp"
                tools:ignore="RtlCompat" >

                <com.teachingchild.teachingautisticchild.customfont.MyTextView_HK_Grotesk_Display_Regular
                    android:id="@+id/ageTxt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:textColor="@color/subtextcolor"
                    android:layout_weight="0.9985"
                    android:textAlignment="viewEnd"
                    android:text=""
                    tools:ignore="RtlCompat" />

                <EditText
                    android:id="@+id/switchage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textSize="15sp"
                    android:textColor="@color/textcolor"/>

            </ViewSwitcher>


            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="0.005"
                android:background="#1F1D1D" />

            <ViewSwitcher
                android:id="@+id/viewSwitcher5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="0.9985"
                android:textAlignment="viewStart"
                android:layout_marginLeft="15dp"
                tools:ignore="RtlCompat" >

                <com.teachingchild.teachingautisticchild.customfont.MyTextView_HK_Grotesk_Display_Regular
                    android:id="@+id/weightTxt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:textColor="@color/subtextcolor"
                    android:layout_weight="0.9985"
                    android:textAlignment="viewStart"
                    android:text=""
                    tools:ignore="RtlCompat" />

                <EditText
                    android:id="@+id/switchweight"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textSize="15sp"
                    android:textColor="@color/textcolor"/>

            </ViewSwitcher>


        </LinearLayout>

        //0.3
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"/>

        //0.4
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4"
            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"/>
            <TextView
                android:id="@+id/badges"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/all"
                android:gravity="center"
                android:layout_weight="0.8586"
                android:text="BADGES"/>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.01"/>

            <TextView
                android:id="@+id/friends"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/studying"
                android:gravity="center"
                android:layout_weight="0.8586"
                android:text="FRIENDS"/>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.01"/>
            <TextView
                android:id="@+id/scores"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/saved"
                android:gravity="center"
                android:layout_weight="0.8586"
                android:text="SCORES"/>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"/>



        </LinearLayout>

        //0.2
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"/>

        //2.1
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1.8"
            android:layout_height="0dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="match_parent"
                app:cardElevation="0dp"
                android:elevation="0dp"
                app:cardCornerRadius="12dp"
                android:layout_marginEnd="25dp"
                android:layout_marginStart="25dp"
                android:layout_height="match_parent">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycleView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </androidx.recyclerview.widget.RecyclerView>
            </androidx.cardview.widget.CardView>


        </LinearLayout>

        //0.5
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/bottom_dashboard"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="0.49">


            <me.ibrahimsn.lib.SmoothBottomBar
                android:id="@+id/bottomBar"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:textColor="@color/textcolor"
                app:textSize="14sp"
                app:iconSize="24dp"
                app:sideMargins="10dp"
                app:itemPadding="8dp"
                app:iconTint="@color/textcolor"
                app:iconTintActive="#5468FF"
                app:indicatorRadius="25dp"
                app:menu="@menu/menu_bottom"/>





        </RelativeLayout>



    </LinearLayout>


</RelativeLayout>


