<LinearLayout
    android:id="@+id/cardview"
    android:layout_width="120dp"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="8.4dp"
    android:background="@drawable/combinedshape"
    android:layout_marginStart="18.4dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="2"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:layout_weight="1.1" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"/>
        <com.teachingchild.teachingautisticchild.customfont.MyTextView_HK_Grotesk_Display_Regular
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Biology Basics"
            android:layout_marginLeft="10dp"
            android:textColor="@color/textcolor"
            android:textSize="14sp"
            android:layout_gravity="center"
            android:gravity="start|center"
            android:layout_weight="0.8"/>



    </LinearLayout>





</LinearLayout>