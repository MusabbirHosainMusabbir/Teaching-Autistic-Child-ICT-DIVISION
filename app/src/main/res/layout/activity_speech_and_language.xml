<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:autofit="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/okkhor_melao_bg"
    android:orientation="vertical"
    android:weightSum="5.2"
    tools:context=".view.SpeechAndLanguage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/Back"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:src="@drawable/backbtn"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="15dp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:gravity="right"
            android:layout_weight="1">


            <ImageView
                android:id="@+id/reload"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:src="@drawable/settings"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="15dp"/>


        </LinearLayout>



    </LinearLayout>

    <!--recycler item start-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3.2"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:weightSum="4"
            android:orientation="vertical"
            android:background="@drawable/background">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="30dp"
                android:weightSum="4">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.9"
                    android:gravity="center"
                    android:orientation="vertical">

                    <com.teachingchild.teachingautisticchild.customfont.MyTextView_HK_Grotesk_Display_Regular
                        android:id="@+id/opt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:paddingTop="15dp"
                        android:text=""
                        android:textColor="@color/textcolor"
                        autofit:minTextSize="25sp"
                        android:textSize="38sp" />

                    <ImageView
                        android:id="@+id/answer"
                        android:scaleType="centerCrop"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/textcolor" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/image"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2.1"
                    android:padding="10dp"
                    android:layout_marginRight="15dp"
                    android:orientation="vertical"
                    >

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:gravity="center"
            android:orientation="vertical"
            android:weightSum="2.2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.8"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.9">

                    <ImageView
                        android:id="@+id/up1"
                        android:onClick="OnClickzz"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:scaleType="fitXY"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:src="@drawable/b_1"/>

                    <ImageView
                        android:id="@+id/up2"
                        android:onClick="OnClickzz"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:scaleType="fitXY"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:src="@drawable/b_5"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.9"
                    android:weightSum="2">

                    <ImageView
                        android:id="@+id/down1"
                        android:onClick="OnClickzz"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:scaleType="fitXY"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:src="@drawable/b_1" />

                    <ImageView
                        android:id="@+id/down2"
                        android:onClick="OnClickzz"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:scaleType="fitXY"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:src="@drawable/b_5"/>

                </LinearLayout>
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

    <!--recycler end-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:weightSum="5">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/sor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/opt_a"
            android:background="@android:color/transparent"
            android:scaleY="1.2"
            android:layout_marginRight="10dp"
            />
        <ImageView
            android:id="@+id/ban"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/opt_b"
            android:background="@android:color/transparent"
            android:scaleY="1.2"
            />
        <ImageView
            android:id="@+id/son"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/sonkhamala_btn"
            android:scaleY="1.2"
            android:background="@android:color/transparent"
            android:layout_marginLeft="10dp"
            />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    </LinearLayout>

</LinearLayout>