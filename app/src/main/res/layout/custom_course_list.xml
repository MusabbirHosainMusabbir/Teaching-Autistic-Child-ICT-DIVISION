<androidx.cardview.widget.CardView
    android:layout_width="260dp"
    android:id="@+id/cardView"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="18.4dp"
    app:cardElevation="0dp"
    android:elevation="0dp"
    app:cardCornerRadius="9dp"
    android:layout_marginEnd="10dp"
    android:layout_marginStart="18.4dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="3"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:layout_weight="1.1" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"/>
        <com.teachingchild.teachingautisticchild.customfont.MyTextView_HK_Grotesk_Display_Regular
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Biology Basics"
            android:layout_marginLeft="10dp"
            android:textColor="@color/title"
            android:textSize="14sp"
            android:layout_gravity="center"
            android:gravity="start|center"
            android:layout_weight="0.5"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"/>

        <com.teachingchild.teachingautisticchild.customfont.MyTextView_HK_Grotesk_Display_Regular
            android:id="@+id/subtext"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="@string/subtext"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center"
            android:gravity="start|center"
            android:layout_weight="0.7"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_weight="0.3">

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"/>

            <TextView
                android:id="@+id/number"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.15"
                android:gravity="center"
                android:text="4"/>

            <TextView
                android:id="@+id/total"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="of 8 lessons"
                android:gravity="start|center"
                android:layout_weight="2"/>

            <ProgressBar
                android:id="@+id/myprogressbar"
                android:layout_height="12dp"
                android:layout_weight="0.45"
                android:layout_width="0dp"
                android:max="100"
                android:gravity="center"
                android:layout_gravity="center"
                style="@style/CustomProgressBar"
                />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"/>


    </LinearLayout>





</androidx.cardview.widget.CardView>